<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <RuntimeIdentifier>linux-musl-x64</RuntimeIdentifier>
    <TrimMode>copyused</TrimMode>
    <GenerateRuntimeConfigurationFiles>true</GenerateRuntimeConfigurationFiles>
    <PublishTrimmed>true</PublishTrimmed>
    <PublishSelfContained>true</PublishSelfContained>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="AWSSDK.S3" Version="3.7.7.1" />
    <PackageReference Include="Brighid.Commands.Sdk.Core" Version="0.1.0-beta4" />
    <PackageReference Include="Serilog.AspNetCore" Version="4.1.0" />
    <PackageReference Include="Destructurama.Attributed" Version="3.0.0" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="6.0.0">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="6.0.0" />
    <PackageReference Include="Pomelo.EntityFrameworkCore.MySql" Version="6.0.0" />
    <PackageReference Include="System.Linq.Async" Version="5.0.0" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.2.3" />
  </ItemGroup>

  <Target Name="GenerateSwagger" AfterTargets="Publish" Condition="'$(SkipSwagger)' != 'true'">
    <PropertyGroup>
      <DotnetDockerImage>mcr.microsoft.com/dotnet/sdk:$(NETCoreSdkVersion)-alpine3.14</DotnetDockerImage>
      <RelativeOutputPath>$([MSBuild]::MakeRelative('$(MSBuildThisFileDirectory)../../', $(OutputPath)))</RelativeOutputPath>
    </PropertyGroup>

    <Message Text="Generating Swagger..." Importance="High" />
    <Exec Command="docker pull $(DotnetDockerImage)" StandardOutputImportance="Low" />
    <Exec Command="docker run --rm -id -v $(MSBuildThisFileDirectory)../../:/app -w /app $(DotnetDockerImage)" ConsoleToMsBuild="true" StandardOutputImportance="Low">
      <Output TaskParameter="ConsoleOutput" PropertyName="ContainerId" />
    </Exec>

    <Exec Command="docker exec -i $(ContainerId) dotnet tool restore" StandardOutputImportance="Low" />
    <Exec Command="docker exec -i $(ContainerId) dotnet swagger tofile --output $(RelativeOutputPath)swagger.json --host https://commands.brigh.id $(RelativeOutputPath)/Service.dll v1" />
    <Exec Command="docker stop $(ContainerId)" StandardOutputImportance="Low" />
  </Target>

</Project>